
<p id="notice"><%= notice %></p>

<h1>Users</h1>
<br>
<%= will_paginate %>

<table class="table table-hover table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Manager</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="table-active">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.manager %></td>
        <td><%= user.admin %></td>
        <td><%= link_to 'Show',  user, class: "btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-secondary"%></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<br>

<% provide(:button_text, 'Add a new user') %>
<div class="card">
    <div class="card-header">
        <h1>Add Users</h1>
    </div>
    <div class="card-body">
        <%= render 'shared/user_form', object: @user%>
    </div>
</div>
